{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Unit Tests with Coverage",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "-m",
                "pytest",
                "tests/",
                "--cov=arcanum",
                "--cov-report=html",
                "--cov-report=term"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Performance Tests (No GC)",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "-X",
                "dev",
                "-m",
                "pytest",
                "performance/",
                "-v",
                "--benchmark-disable-gc"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        }
    ]
}